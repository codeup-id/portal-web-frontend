{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@portal-web/shared-api": ["libs/shared/api/src/index.ts"],
      "@portal-web/shared-api/server": ["libs/shared/api/src/server.ts"],
      "@portal-web/shared-base": ["libs/shared/base/src/index.ts"],
      "@portal-web/shared-base/initialize": [
        "libs/shared/base/src/lib/initialize/index.ts"
      ],
      "@portal-web/shared-base/server": ["libs/shared/base/src/server.ts"],
      "@portal-web/shared-ui": ["libs/shared/ui/src/index.ts"],
      "@portal-web/shared-ui/presets/*": ["libs/shared/ui/presets/*"],
      "@portal-web/shared-ui/server": ["libs/shared/ui/src/server.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
